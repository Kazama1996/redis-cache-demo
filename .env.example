# MySQL 設定
DB_HOST=localhost
DB_PORT=3306
DB_NAME=your_database_name
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# MySQL 連線池設定
DB_POOL_MAX_SIZE=10
DB_POOL_MIN_IDLE=5
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000
DB_MAX_LIFETIME=1800000

# JPA 設定
JPA_DDL_AUTO=update
JPA_SHOW_SQL=true
JPA_FORMAT_SQL=true

# Snowflake ID 設定
WORKER_ID=1
DATACENTER_ID=1

# Redis 設定
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DATABASE=0
REDIS_CONNECTION_POOL_SIZE=64

# Redisson 連線池設定
REDISSON_POOL_SIZE=64
REDISSON_MIN_IDLE=10

# Log 設定
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_SQL=DEBUG
LOG_LEVEL_SQL_BINDER=TRACE
LOG_LEVEL_REDISSON=DEBUG

# Server 設定
SERVER_PORT=8080
SERVER_CONTEXT_PATH=/